              class="button button-secondary">Voir sur GitHub</a
            >
          </div>

          <div class="code-example">
            <span class="code-tag">Entity</span>
            <CodeBlock
              code={`from framefox.core.orm.entity import Entity
from framefox.core.orm.field import Column, Relation

# Define your data model
class Product(Entity):
    # Table name is automatically derived
    
    name = Column("string", length=100)
    price = Column("float", nullable=False)
    description = Column("text", nullable=True)
    
    # Define relationships
    category = Relation(
        "Category", 
        related_name="products",
        cascade=True
    )
    
    def __str__(self):
        return self.name`}
              lang="python"
            />
