---
import { ClientRouter } from "astro:transitions";
import CodeBlock from "../components/CodeBlock.astro";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Framefox - Swift, smart, and a bit foxy!</title>
    <link rel="icon" href="/docs/favicon.svg" type="image/svg+xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,800&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <ClientRouter />

    <style>
      :root {
        --fox-orange: #f4bf5f;
        --fox-dark-orange: #e8a93c;
        --dark-bg: #181818;
        --darker-bg: #121212;
        --light-text: #ffffff;
        --code-bg: rgba(0, 0, 0, 0.5);
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Poppins", sans-serif;
        background-color: var(--dark-bg);
        color: var(--light-text);
        line-height: 1.6;
        overflow-x: hidden;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }

      /* Header & Navigation */
      header {
        background-color: rgba(18, 18, 18, 0.95);
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      }

      .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 0;
      }

      .logo-container {
        display: flex;
        align-items: center;
      }

      .logo {
        height: 40px;
        margin-right: 15px;
      }

      .logo-text {
        font-size: 28px;
        font-weight: 800;
        color: var(--fox-orange);
      }

      .logo-text span {
        font-style: italic;
      }

      nav ul {
        display: flex;
        list-style: none;
      }

      nav ul li {
        margin-left: 30px;
      }

      nav ul li a {
        color: var(--light-text);
        text-decoration: none;
        font-weight: 500;
        font-size: 16px;
        transition: color 0.3s;
      }

      nav ul li a:hover {
        color: var(--fox-orange);
      }

      .button {
        background-color: var(--fox-orange);
        color: var(--darker-bg);
        padding: 10px 20px;
        border-radius: 30px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
        border: 2px solid var(--fox-orange);
      }

      .button:hover {
        background-color: transparent;
        color: var(--fox-orange);
      }

      /* Hero Section */
      .hero {
        height: 100vh;
        display: flex;
        align-items: center;
        position: relative;
        overflow: hidden;
        background: linear-gradient(
          135deg,
          var(--darker-bg) 0%,
          var(--dark-bg) 100%
        );
      }

      .hero::before {
        content: "";
        position: absolute;
        width: 200%;
        height: 200%;
        background: radial-gradient(
          circle,
          rgba(244, 191, 95, 0.1) 0%,
          rgba(0, 0, 0, 0) 70%
        );
        top: -50%;
        left: -50%;
        animation: pulse 15s infinite alternate;
      }

      @keyframes pulse {
        0% {
          transform: scale(0.8);
          opacity: 0.3;
        }
        100% {
          transform: scale(1.2);
          opacity: 0.1;
        }
      }

      .hero-content {
        position: relative;
        z-index: 1;
      }

      .hero h1 {
        font-size: 72px;
        font-weight: 800;
        margin-bottom: 20px;
        line-height: 1.1;
      }

      .hero-title-highlight {
        color: var(--fox-orange);
        font-style: italic;
      }

      .hero p {
        font-size: 24px;
        margin-bottom: 40px;
        max-width: 600px;
        opacity: 0.9;
      }

      .buttons {
        display: flex;
        gap: 20px;
      }

      .button-secondary {
        background-color: transparent;
        border: 2px solid var(--fox-orange);
        color: var(--fox-orange);
      }

      .button-secondary:hover {
        background-color: var(--fox-orange);
        color: var(--darker-bg);
      }

      .floating-fox {
        position: absolute;
        right: 5%;
        bottom: 10%;
        width: 400px;
        height: 400px;
        transform: rotate(10deg);
        animation: float 6s ease-in-out infinite alternate;
      }

      @keyframes float {
        0% {
          transform: translateY(0) rotate(5deg);
        }
        100% {
          transform: translateY(-30px) rotate(10deg);
        }
      }

      /* Features Section */
      .section {
        padding: 120px 0;
      }

      .section-title {
        font-size: 42px;
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
      }

      .section-subtitle {
        font-size: 18px;
        text-align: center;
        margin-bottom: 60px;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
        opacity: 0.7;
      }

      .features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
      }

      .feature-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 30px;
        border-radius: 15px;
        transition:
          transform 0.3s,
          box-shadow 0.3s;
      }

      .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(244, 191, 95, 0.1);
      }

      .feature-icon {
        width: 60px;
        height: 60px;
        background-color: rgba(244, 191, 95, 0.15);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin-bottom: 20px;
      }

      .feature-icon i {
        color: var(--fox-orange);
        font-size: 24px;
      }

      .feature-card h3 {
        font-size: 22px;
        margin-bottom: 15px;
        font-weight: 600;
      }

      /* Code Showcase */
      .code-section {
        background-color: var(--darker-bg);
        position: relative;
      }

      .code-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        align-items: center;
      }

      .code-example {
        background-color: var(--code-bg);
        border-radius: 10px;
        padding: 25px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        font-family: "Courier New", monospace;
        line-height: 1.5;
        overflow-x: auto;
        position: relative;
        margin-top: 15px; /* Ajoute de l'espace en haut pour le badge */
      }

      .code-example pre {
        color: #e6e6e6;
        font-size: 15px;
      }

      .code-tag {
        position: absolute;
        top: -10px;
        left: 20px;
        background-color: var(--fox-orange);
        color: var(--darker-bg);
        font-size: 14px;
        font-weight: 600;
        padding: 3px 12px;
        border-radius: 20px;
        z-index: 10; /* Assure que le badge est au-dessus des autres éléments */
      }

      .keyword {
        color: #ff79c6;
      }

      .string {
        color: #f1fa8c;
      }

      .function {
        color: #8be9fd;
      }

      .comment {
        color: #6272a4;
      }

      .code-explanation {
        padding-left: 20px;
      }

      .code-explanation h3 {
        font-size: 32px;
        margin-bottom: 20px;
        font-weight: 700;
      }

      .code-explanation p {
        font-size: 16px;
        margin-bottom: 20px;
        opacity: 0.9;
      }

      .code-explanation ul {
        padding-left: 20px;
        margin-bottom: 20px;
      }

      .code-explanation li {
        margin-bottom: 10px;
      }

      /* Profiler Showcase */
      .profiler-showcase {
        margin-top: 80px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .profiler-image {
        width: 90%;
        border-radius: 10px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .browser-mockup {
        position: relative;
        margin-bottom: 30px;
        width: 90%;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.4);
      }

      .browser-header {
        background: #4a4a4a;
        padding: 10px;
        display: flex;
        align-items: center;
      }

      .browser-buttons {
        display: flex;
        gap: 6px;
        margin-right: 15px;
      }

      .browser-button {
        width: 12px;
        height: 12px;
        border-radius: 50%;
      }

      .browser-button.red {
        background-color: #ff5f56;
      }

      .browser-button.yellow {
        background-color: #ffbd2e;
      }

      .browser-button.green {
        background-color: #27c93f;
      }

      .browser-address {
        background: #2d2d2d;
        color: #ddd;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 12px;
        flex-grow: 1;
        font-family: "Courier New", monospace;
      }

      /* Testimonials */
      .testimonials {
        text-align: center;
      }

      .testimonial-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 30px;
        margin-top: 50px;
      }

      .testimonial-card {
        background: rgba(255, 255, 255, 0.02);
        border-radius: 10px;
        padding: 30px;
        border: 1px solid rgba(255, 255, 255, 0.05);
      }

      .quote {
        font-size: 18px;
        font-style: italic;
        margin-bottom: 20px;
        position: relative;
      }

      .quote::before,
      .quote::after {
        content: '"';
        font-size: 30px;
        color: var(--fox-orange);
        opacity: 0.5;
      }

      .author {
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .author-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 10px;
        background-color: rgba(244, 191, 95, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .author-avatar i {
        color: var(--fox-orange);
      }

      /* CTA Section */
      .cta {
        background: linear-gradient(
          45deg,
          rgba(244, 191, 95, 0.15),
          rgba(244, 191, 95, 0.05)
        );
        text-align: center;
        padding: 100px 0;
        position: relative;
        overflow: hidden;
      }

      .cta::before {
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><circle cx="50" cy="50" r="2" fill="%23f4bf5f" opacity="0.2"/></svg>');
        top: 0;
        left: 0;
        opacity: 0.5;
      }

      .cta h2 {
        font-size: 48px;
        margin-bottom: 20px;
      }

      .cta p {
        font-size: 18px;
        max-width: 600px;
        margin: 0 auto 40px;
        opacity: 0.9;
      }

      /* Footer */
      footer {
        background-color: var(--darker-bg);
        padding: 60px 0 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
      }

      .footer-content {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin-bottom: 40px;
      }

      .footer-logo {
        margin-bottom: 20px;
      }

      .footer-info {
        max-width: 400px;
      }

      .footer-links h4 {
        color: var(--fox-orange);
        margin-bottom: 20px;
        font-size: 18px;
      }

      .footer-links ul {
        list-style: none;
      }

      .footer-links li {
        margin-bottom: 10px;
      }

      .footer-links a {
        color: var(--light-text);
        text-decoration: none;
        opacity: 0.7;
        transition: opacity 0.3s;
      }

      .footer-links a:hover {
        opacity: 1;
        color: var(--fox-orange);
      }

      .social-icons {
        display: flex;
        gap: 15px;
        margin-top: 20px;
      }

      .social-icon {
        width: 40px;
        height: 40px;
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
      }

      .social-icon:hover {
        background-color: var(--fox-orange);
        transform: translateY(-5px);
      }

      .social-icon i {
        color: var(--light-text);
        font-size: 18px;
      }

      .copyright {
        text-align: center;
        padding-top: 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        font-size: 14px;
        opacity: 0.7;
      }

      /* Responsive Design */
      @media (max-width: 992px) {
        .hero h1 {
          font-size: 56px;
        }

        .floating-fox {
          width: 300px;
          height: 300px;
          right: 0;
        }

        .code-grid {
          grid-template-columns: 1fr;
        }
      }

      @media (max-width: 768px) {
        .nav-container {
          flex-direction: column;
        }

        nav ul {
          margin-top: 20px;
        }

        nav ul li {
          margin: 0 10px;
        }

        .hero h1 {
          font-size: 42px;
        }

        .hero p {
          font-size: 18px;
        }

        .floating-fox {
          display: none;
        }

        .section {
          padding: 80px 0;
        }

        .footer-content {
          flex-direction: column;
          gap: 40px;
        }
      }

      @media (max-width: 576px) {
        .buttons {
          flex-direction: column;
          width: 100%;
        }

        .button {
          width: 100%;
          text-align: center;
        }
      }
    </style>
