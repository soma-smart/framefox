{% raw %}{% extends "base.html" %}

{% block title %}{% endraw %}{{ entity_name|title }}{% raw %} Details{% endblock %}

{% block content %}{% endraw %}
<div class="container mt-5">
    <h1>{{ entity_name|title }} Details</h1>
    
    <div class="card mt-4">
        <div class="card-body">
            <div class="mb-3">
                <strong>ID:</strong>
                <span>{% raw %}{{ item.id }}{% endraw %}</span>
            </div>
            <div class="mb-3">
                <strong>Name:</strong>
                <span>{% raw %}{{ item.name }}{% endraw %}</span>
            </div>
            <div class="mb-3">
                <strong>Price:</strong>
                <span>{% raw %}{{ item.price }}{% endraw %}</span>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="{% raw %}{{ url_for('{% endraw %}{{ entity_name }}{% raw %}.update', id=item.id) }}" class="btn btn-primary">Edit</a>
        <a href="{{ url_for('{% endraw %}{{ entity_name }}{% raw %}.read_all') }}" class="btn btn-secondary">Back</a>
        <form method="POST" action="{{ url_for('{% endraw %}{{ entity_name }}{% raw %}.delete', id=item.id) }}" class="d-inline">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
        </form>
    </div>
</div>
{% raw %}{% endblock %}{% endraw %}